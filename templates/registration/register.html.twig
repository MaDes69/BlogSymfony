{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block content %}
<div class="container">
	<h1 class="mt-4 text-center ">Inscription</h1>
	{{ form_start(registrationForm, {'attr': {'class': 'row'}}) }}
	<div class="form-group row py-1 mt-4">
		{{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email'}}) }}
		<span class="col-sm-2 col-form-label has-danger" class="error">{{ form_errors(registrationForm.email) }}</span>
	</div>
	<div class="form-group row py-1">
		{{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                <span  class="col-sm-2 col-form-label has-danger"class="error">{{ form_errors(registrationForm.username) }}</span>
    </div>
    <div class="form-group row py-1">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                <span  class="col-sm-2 col-form-label has-danger" class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
            </div>
        <div  class="form-group row py-3 " class="input-field col s12">
                <input type="submit" name="" class="btn btn-primary" value="M'inscrire">
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
